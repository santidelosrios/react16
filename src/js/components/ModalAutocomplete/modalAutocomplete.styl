@import '../../../assets/stylesheets/colors'

.modal-autocomplete-container
    display: flex
    position: fixed
    top: 50%
    left: 50%
    padding: 20px 30px
    align-items: center
    justify-content: center
    flex-direction: column
    overflow: hidden
    transform(translate(-50%,-50%))
    b-radius(3px)
    width 80%
    max-width 100%
    height 95%
    background-color #fff
    z-index 51
    color k-gray-soft-1
    .m__a__header
        text-align right
        font-weight normal
        color: #fff
        padding-bottom 20px
        border-bottom 1px solid k-gray-soft-3
        width 100%
        .contacts
            font-size 1.2em
        .m__a__close
            font-size 1.2em
            vertical-align: sub
            cursor pointer
            color: k-gray-soft-1
    .m__a__content
        font-size 0
        flex 1
        display flex
        width 100%
        height 100%
        overflow auto
        padding-top 20px
        .m__a__picker
            display inline-block
            vertical-align top
            font-size 1rem
            width 40%
            height 100%
            position relative
            overflow auto
            .m__a__picker__form
                position relative
                display flex
                flex-direction column
                height 100%
                .m__a__typo
                    margin-top 1px
                    .box-search
                        position relative
                        input
                            color k-gray-dark-4
                            font-weight normal
                            padding-right 50px
                        i
                            position absolute
                            top 12px
                            right 10px
            .m__a__topick
                position absolute
                z-index 2
                left 0
                box-shadow(0 3px 6px rgba(0,0,0,.14))
                top 47px
                width 100%
                height 300px
                ul
                    overflow auto
                    height 75%
                    .active
                        label
                            margin-right 10px
                            font-size 1em
                            .ion-ios-circle-outline
                                display none
                            .ion-ios-checkmark
                                display block
                    li
                        background-color k-gray-soft-4
                        color k-soft-dark
                        cursor pointer
                        padding 10px
                        display flex
                        align-items center
                        label
                            margin-right 10
                            font-size 1em
                            .ion-ios-checkmark
                                display none
                        .parent-kids-collage
                            position relative
                            .kid-collage
                                display flex
                                img
                                    background-color #ffffff
                                    border 2px solid k-gray-soft-4
                                    border-radius 50%
                                    width 40px
                                    height 40px
                        .parent-info
                            margin 0 20px
                            flex 1
    .m__a__footer
        padding 20px 0 0 0
        font-weight normal
        width 100%
        position relative
        display table
        border-collapse separate
        .picker-ok
            float right
            width 59%
            .count-contacts
                display inline-block
                float left
                line-height 44px
            .button-ok
                display inline-block
                float right
                button
                    margin 0
                    color #ffffff
                    width 180px